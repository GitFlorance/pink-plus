.comment {
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 700px;
  margin: 0 100px;
  &__text {
    font: 400 18px/30px 'Open Sans', sans-serif;
    color: #283645;
    text-align: center;
  }
  &__name {
    font: 700 24px/30px 'Open Sans', sans-serif;
    margin: 50px 0 17px;
  }
  &__abs {
    font: 400 18px/30px 'Open Sans', sans-serif;
    color: #283645;
  }
}